{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
   "scripts": {
    "dev": "concurrently \"npm:dev:vite\" \"npm:dev:theme\"",
    "dev:vite": "vite",
    "dev:theme": "npx tailwindcss@3 --input ./resources/css/filament/admin/theme.css --output ./public/css/filament/admin/theme.css --config ./resources/css/filament/admin/tailwind.config.js --watch",
    "build": "vite build && npm run build:theme",
    "build:theme": "npx tailwindcss@3 --input ./resources/css/filament/admin/theme.css --output ./public/css/filament/admin/theme.css --config ./resources/css/filament/admin/tailwind.config.js --minify"
},
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/typography": "^0.5.19",
        "@tailwindcss/vite": "^4.0.0",
        "autoprefixer": "^10.4.21",
        "axios": "^1.11.0",
        "concurrently": "^9.2.1",
        "laravel-vite-plugin": "^2.0.0",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.13",
        "vite": "^7.0.4"
    }
}
